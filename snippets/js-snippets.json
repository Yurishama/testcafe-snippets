          "\t\\})",
          "\t.beforeEach(async (t) => {",
          "\t\t// inject in the test context any input data needed to run the test",
          "\t\tt.ctx.${4:inputData} = ${4:inputData};",
          "\t\t// put here all actions that are common to all tests",
          "\t\t$0",
          "\t\\});",
